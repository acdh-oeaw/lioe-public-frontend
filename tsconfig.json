{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2021", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2021"
  },
  "include": ["./**/*"],
  "exclude": ["cypress", "dist", "node_modules"]
}
